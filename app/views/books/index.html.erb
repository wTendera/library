<% provide(:title, 'Avaiable books') %>
<div class="row">
    <section>
      <h1 style="margin-bottom: 30px "> Avaiable books</h1>
      <table class="table table-striped">
        <thead>
          <tr>
          <th style="width: 300px">Title</th>
          <th>Author</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |u|%>
            <tr> 
              <th><%= link_to u.name, u%></th>
              <th> <%= u.author %></th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </section>
</div>  
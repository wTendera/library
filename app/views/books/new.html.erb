 <% provide(:title, 'Add book') %>
<h1>Add new book</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@book, :html => {:multipart => true}) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :author %>
      <%= f.text_field :author %>
      <%= f.label :cover %>
      <%= f.file_field :cover , class: "btn btn-default btn-file", style: "margin-bottom:5px"%>

      <br>

      <%= f.submit "Submit", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
<% provide(:title, 'Add book') %>
<h1>Add new book</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@book) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <br>

      <%= f.submit "Submit", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
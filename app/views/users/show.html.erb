<% provide(:title, @user.name) %>
<div class="row">
  <section class="span8">
    <h1 class="clearfix">
        <%= gravatar_for @user %>
        <%= @user.name %>
    </h1>
    <% if @user.rents.count != 0 %>
      <h3 style="margin-bottom: 30px "> Rented books </h3> 
      <table class="table table-striped">
        <thead>
          <tr>
          <th style="width: 200px">Title</th>
          <th style="width: 200px">Author</th>
          </tr>
        </thead>
        <tbody>
          <% @user.rents.each do |u|%>
            <tr> 
              <th><%= link_to u.book.name, book_url(u.book_id)%></th>
              <th> <%= u.book.author %></th>
              <% if current_user == @user %>
                <th> <%= link_to "Give back", rent_url(u), method: :delete, class: "btn btn btn-primary rent-button" %> </th>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </section>
</div>